<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.emroxriprap.klok.NewJobCreatorFragment"
    android:orientation="vertical"
    android:padding="@dimen/ten"
    android:id="@+id/ll_viewgroup">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Location"
            android:layout_margin="@dimen/ten"
            android:layout_weight=".25"
            android:gravity="center_vertical"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_njc_location"
            android:layout_marginRight="@dimen/ten"
            android:layout_weight=".75"
            android:capitalize="words" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Address/Unit "
            android:id="@+id/textView"
            android:layout_weight="0.25"
            android:layout_margin="@dimen/ten"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_njc_address"
            android:layout_weight=".75"
            android:layout_marginRight="@dimen/ten"
            android:capitalize="words" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="right">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/b_clear_fields"
            android:layout_margin="@dimen/ten" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Job"
            android:id="@+id/b_add_job"
            android:layout_margin="@dimen/ten" />
    </LinearLayout>
</LinearLayout>
