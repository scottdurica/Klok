<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.emroxriprap.klok.SummaryFragment"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Job Name"
            android:layout_weight=".5"
            android:layout_marginLeft="@dimen/ten" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv_summary_name"
            android:layout_weight=".5"
            android:gravity="right"
            android:layout_marginRight="@dimen/ten" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_weight=".5"
            android:layout_marginLeft="@dimen/ten"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv_summary_date"
            android:layout_weight=".5"
            android:gravity="right"
            android:layout_marginRight="@dimen/ten" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Labor Total"
            android:layout_weight=".5"
            android:layout_marginLeft="@dimen/ten"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv_summary_labor_total"
            android:layout_weight=".5"
            android:gravity="right"
            android:layout_marginRight="@dimen/ten" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Material Total"
            android:layout_weight=".5"
            android:layout_marginLeft="@dimen/ten"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv_summary_material_total"
            android:layout_weight=".5"
            android:gravity="right"
            android:layout_marginRight="@dimen/ten" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Grand Total"
            android:layout_weight=".5"
            android:layout_marginLeft="@dimen/ten" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv_summary_job_total"
            android:layout_weight=".5"
            android:gravity="right"
            android:layout_marginRight="@dimen/ten" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten">

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Invoiced"
            android:id="@+id/cb_invoiced_status"
            android:layout_weight=".5"
            android:checked="false" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/ten">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Start Over"
            android:id="@+id/b_start_over"
            android:layout_weight=".3" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/b_edit"
            android:layout_weight=".3"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginLeft="@dimen/ten" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save It!"
            android:id="@+id/b_save"
            android:layout_weight=".35" />
    </LinearLayout>

</LinearLayout>

