<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Here"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_list_item_date"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tv_list_item_job_name"
        android:layout_alignEnd="@+id/tv_list_item_job_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/list_item_margin_left_right"
        android:layout_marginTop="@dimen/list_item_margin_top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2815 Ralph Road"
        android:id="@+id/tv_list_item_job_name"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/list_item_margin_left_right"
        android:layout_marginTop="@dimen/list_item_margin_top" />
</RelativeLayout>
